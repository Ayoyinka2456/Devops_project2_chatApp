---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: project-app
  labels:
    app: project-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: project-app
  template:
    metadata:
      labels:
        app: project-app
    spec:
      containers:
        - name: project-app
          image: ayoyinka/java_app_5_25:{{ counter }}
          ports:
            - containerPort: 8080

---
apiVersion: v1
kind: Service
metadata:
  name: project-app
spec:
  type: LoadBalancer
  selector:
    app: project-app
  ports:
    - port: 8080 
      targetPort: 8080
